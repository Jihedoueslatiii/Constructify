package com.example.reports.Entity;

import jakarta.persistence.*;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

import java.math.BigDecimal;
import java.time.LocalDate;
import java.util.ArrayList;
import java.util.List;

@Entity
@Getter
@Setter
@NoArgsConstructor
public class Supplier {
    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long idSupplier;

    private String name;
    private String contactPerson;
    private String email;
    private String phoneNumber;
    private String address;

    /* Status & Industry Information */
    private String status;
    private String industry;
    private String rating;

    /* Tracking & Identification */
    private LocalDate dateAdded;
    private LocalDate lastUpdated;
    private String taxId;

    /* Financial Data */
    private BigDecimal totalContractValue = BigDecimal.ZERO; // Default value

    /* Performance & Reliability */
    private boolean isPreferredSupplier = false; // Default value
    private int reliabilityScore = 0; // Default value
    private boolean blacklisted = false; // Default value

    @ElementCollection
    private List<String> tags = new ArrayList<>(); // Default value

    @OneToMany(mappedBy = "supplier", cascade = CascadeType.ALL)
    private List<Contract> contracts = new ArrayList<>(); // Default value

    @Override
    public String toString() {
        return name + " - " + prix + "â‚¬";
    }
}